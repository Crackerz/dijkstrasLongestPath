package main

type Dam struct {
	Matrix [][]int
}

func (r *Dam) dijkstra() []int {

}

func (r *Dam) getRootNodes() []int {
	roots:=make([]int,0,len(r.Matrix))
	verticies:=len(r.Matrix)
	for i:=0;i<verticies;i++ {
		hasChild:=false
		//Check each node for children
		for j:=0;j<verticies;j++ {
			if r.Matrix[j][i] != 0 {
				hasChild=true
				break
			}
		}
		if !hasChild {
			roots=roots[0:len(roots)]
		}
	}
	return roots
}
